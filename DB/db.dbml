// Documentation DBML format


// Table: users
table users {
    id int [pk, increment]
    name varchar
    email varchar [unique]
    created_at datetime [default: `now()`]
}

// Table: posts
table posts {
    id int [pk, increment]
    title varchar
    content text
    user_id int [ref: > users.id]
    created_at datetime [default: `now()`]
}

// Table: comments
table comments {
    id int [pk, increment]
    content text
    user_id int [ref: > users.id]
    post_id int [ref: > posts.id]
    created_at datetime [default: `now()`]
}

// Table: likes
table likes {
    id int [pk, increment]
    user_id int [ref: > users.id]
    post_id int [ref: > posts.id]
    created_at datetime [default: `now()`]
}
